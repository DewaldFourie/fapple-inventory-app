extends layout 

block content 
  h1 #{title} 

  form(method="post")
    div.form-group 
      label(for='cat_title') Category Name: 
      input#cat_title.form-control(type='text', placeholder="Fapple Device Category" name='cat_title' required value=(undefined===category ? '' : category.title))
    div.form-group 
      label(for="cat_description") Description: 
      textarea#cat_description.form-control(name='cat_description' placeholder="Description of Category" required)= undefined===category ? '' : category.description
    button.btn.btn-primary(type="submit") Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg