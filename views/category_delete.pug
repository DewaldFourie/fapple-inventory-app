extends layout 

block content 

  h1 #{title}:  #{category.title}
  
  if category_items.length 

    p #[strong Delete the following Items before attempting to delete this Category.] 
    div(style='margin-left:20px;margin-top:20px;') 
    h4 Items: 
    dl 
      each item in category_items 
        dt 
          a(href=item.url) #{item.title} 
        dd #{item.description} 

  else 
    p #[strong Do you really want to DELETE this Category?] 

    form(action="", method="post") 
      div.from-group 
        input#categoryid.form-control(type="hidden" name="categoryid" value=category._id)
        input.form-control.password-input(type="password", name="password", placeholder="Enter Authentication Password")
        if errMsg 
          p.text-danger #{errMsg}
      button.btn.btn-primary.delete-submit-btn(type='submit') Delete

