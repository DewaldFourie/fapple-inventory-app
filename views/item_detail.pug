extends layout 

block content 
  h1 Item: #{item.title} 

  p #[strong Category: ]
    a(href=item.category.url) #{item.category.title} 
  p #[strong Description:] 
    p(style='font-size:smaller;max-width:50%;') #{item.description} 
  img(src=item.image, alt=`S{item.title} box cover`)
  p #[strong Price:] #{item.price} 
  p #[strong Amount in Stock:] #{item.count} 

  hr
  p 
    a(href=item.url+'/update') Update Item 
    a(style='margin-left:100px;' href=item.url+'/delete') Delete Item 