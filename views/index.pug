extends layout

block content
  div.home-page-container
    div.home-header
      h1= title
    div.home-summary  
      p We have a variety of the newest and best tech devices for you to choose from.

    div.main-content-container 
      div.main-content-item
        a(class="main-content-item-tag" href="/catalog/categories") 
          img(class="main-content-image" src='/images/fapple-categories.png', alt="Categories box cover")
          strong Categories
      div.main-content-item
        a(class="main-content-item-tag" href="/catalog/items")
          img(class="main-content-image" src='/images/fapple-items.png', alt="Items box cover")
          strong Items
  
    p Current Inventory: 
      ul
        li #[strong Categories:] !{category_count}
        li #[strong Items:] !{item_count}